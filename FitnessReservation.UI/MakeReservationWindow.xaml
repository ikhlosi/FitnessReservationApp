<Window x:Class="FitnessReservation.UI.MakeReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessReservation.UI"
        mc:Ignorable="d"
        Title="Make a Reservation" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="New Reservation" VerticalAlignment="Top" HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Date to reserve:"/>
        <DatePicker Grid.Row="1" Grid.Column="1" FirstDayOfWeek="Monday" Name="dateReservation" SelectedDateFormat="Long" SelectedDateChanged="dateReservation_SelectedDateChanged"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Device to reserve"/>
        <ComboBox Grid.Row="2" Grid.Column="1" Name="comboDevice" IsEnabled="False" SelectionChanged="comboDevice_SelectionChanged"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Select Timeslot:"/>
        <ComboBox Grid.Row="3" Grid.Column="1" Name="comboTimeslot" IsEnabled="False" SelectionChanged="comboTimeslot_SelectionChanged"/>

        <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Name="btnReserve" Content="Reserve" Margin="44,2,44,2" Click="btnReserve_Click" IsEnabled="False"/>

        <!--<ListBox Grid.Row="3" Grid.Column="0" Name="listTimeslots"/>-->
    </Grid>
</Window>
